rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Voice input files - users can upload their own recordings
    match /voice-input/{userId}/{fileName} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024  // Max 10MB
                   && request.resource.contentType.matches('audio/.*');
    }
    
    // Voice output files - users can read their generated audio
    match /voice-output/{userId}/{fileName} {
      allow read: if request.auth != null && request.auth.uid == userId;
      // Only Cloud Functions can write here
      allow write: if false;
    }
    
    // Community shared audio (optional feature)
    match /community-audio/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024;  // Max 5MB
    }
  }
}
